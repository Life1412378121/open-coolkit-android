<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_layout_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="@string/enter_share_nuber" />
    <TextView
        android:layout_below="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_country"/>
    <ImageView
        android:layout_below="@+id/tv_tip"
        android:id="@+id/iv_corner"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_marginTop="24dp"
        android:layout_toRightOf="@+id/tv_country"
        android:src="@drawable/reset_register_corner"

       />

    <EditText
        android:id="@+id/et_share_to"
        android:layout_width="fill_parent"
        android:layout_toRightOf="@+id/iv_corner"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tip"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:paddingLeft="10dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/tv_gap"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_share_to"
        android:layout_marginTop="0dp"
        android:background="@color/blue" />

    <TextView
        android:id="@+id/tv_dash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_gap"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dash" >

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/ok" />

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/cancel" />
    </LinearLayout>

</RelativeLayout>