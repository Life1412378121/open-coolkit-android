<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_layout_device"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:background="#dde0e1"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_add_group"
        android:layout_width="fill_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/add_group"
        android:background="@color/white"
        android:gravity="left|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="5dp"
        android:text="@string/add_new_group" />

    <ListView
        android:id="@+id/lv_groups"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_add_group"
        android:layout_marginTop="10dp" 
         android:listSelector="#00000000"  android:cacheColorHint="#00000000" android:footerDividersEnabled="false" >
    </ListView>

</RelativeLayout>